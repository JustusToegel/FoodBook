<div class="container p-3 mb-5 w-50">
  <h1 class="mb-4">Create a new recipe:</h1>
  <%= simple_form_for([current_user, @meal]) do |f| %>

    <div class="row">

      <div class="col">
        <%= f.label :name, { class: "edit-form-label"} %><br>
        <%= f.text_field :name,  { class: "edit-form-input", placeholder: "Name of Recipe" } %>
      </div>

      <div class="col">
        <%= f.label :prep_time, { class: "edit-form-label"} %><br>
        <%= f.text_field :prep_time,  { class: "edit-form-input", placeholder: "Prep Time" } %>
      </div>

    </div>

    <div class="row my-3">
      <div class="col">
        <%= f.label :description, { class: "edit-form-label"} %><br>
        <%= f.text_field :description, { class: "edit-form-input", placeholder: "Description" } %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col">
        <%= f.label :instructions, { class: "edit-form-label"} %><br>
        <%= f.text_field :instructions, { class: "edit-form-input", placeholder: "Instructions" } %>
      </div>
    </div>

    <div class="row">
      <%= f.input :photo, as: :file %>
    </div>

    <div class="bottom-right">
        <%= f.submit "Create", class: "btn btn-success"%>
    </div>
  <% end %>
</div>




<%# Form for Ingredient Search %>
<div class="greenbox">
  <div class="search-bar">
    <%= form_with url: new_user_meal_path, method: :get do %>
      <div class="form-search form-group">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control-search string required",
          placeholder: "What do you need?"
        %>
        <%= button_tag(name: "", class: "search-button") do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    <% end %>
  </div>

  <ul>
  <% @ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
  </ul>
</div>

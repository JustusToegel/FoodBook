<% total = 0 %>
<div>
<div class="shoppingcart-form">
  <h2>Your Shopping List</h2>
  <ul>
    <% @cart.each do |cart_item| %>
      <% cart_item.meal.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient.name %>
          <%# how many times %>
          <% ingredient.meal_ingredients.each do |item| %>
            <% if item.meal == cart_item.meal %>
              <% number = (item.quantity.to_i * cart_item.amount / cart_item.meal.servings).round %>
              <p> For <%= cart_item.amount %> servings you need the item <%= number %> times</p>
              <%# price %>
              <% price = (ingredient.price * number).round(2)  %>
              <% total += price %>
              <p> costing: <%= price %>â‚¬</p>
            <% end %>
          <% end %>
        </li>
       <% end %>
    <% end %>
  </ul>
  <h3>TOTAL = <%= total %></h3>
</div>
</div>

<%= simple_form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :instagram %>
  <%= f.text_field :instagram %>
  <%= f.label :you_tube %>
  <%= f.text_field :you_tube %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>


<%= link_to "Delete Profile", user_path(@user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>



<%# banner %>
<div class="banner">
  <br><br><br><br><br><br>
  <h2 class="title">Welcome to</h2>
  <h1><%= image_tag ("Logo_FoodBook.png"), class: "logo" %></h1>

<%# Search Bar %>
<div class="search-bar">
  <%= form_with url: root_path, method: :get do %>
    <div class="form-search form-group">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control-search string required",
        placeholder: "Who do you want to be inspired by?"
      %>
      <%= button_tag(name: "", class: "search-button") do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>

</div>
<%# end of banner %>

<div class="cards">

  <% @users.each do |user| %>
    <div class="card">
      <div class="photo-wrapper">
        <div class="image">
          <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key %>
          <% end %>
        </div>

        <div class="card-user-description">
          <h2><%= link_to user.name, user_path(user), class: "text-decoration-none" %></h2>
          <p><%= user.description %></p>
        </div>
      </div>

      <div class="card-user-info">
        <p>56 recipes<br>211k followers</p>
        <div class="tags">
          <button style>HIGH PROTEIN</button><button>VEGAN</button><button>LOW CARB</button>
        </div>
      </div>

    </div>
  <% end %>
</div>

<div class="container p-3 mb-4 w-50">
  <h1 class="mb-4">Edit your profile:</h1>
  <%= simple_form_for(@user) do |f| %>

      <div class="row">

        <div class="col">
          <%= f.label :name, { class: "edit-form-label"} %><br>
          <%= f.text_field :name,  { class: "edit-form-input", placeholder: "Name" } %>
        </div>

        <div class="col">
          <%= f.label :bio, { class: "edit-form-label"} %><br>
          <%= f.text_field :bio,  { class: "edit-form-input", placeholder: "description" } %>
        </div>

      </div>

      <div class="row my-3">
        <div class="col">
          <%= f.label :description, { class: "edit-form-label"} %><br>
          <%= f.text_field :description, { class: "edit-form-input", placeholder: "bio" } %>
        </div>
      </div>

      <div class="row my-3">

        <div class="col mr-3">
          <%= f.label :instagram, { class: "edit-form-label"} %><br>
          <%= f.text_field :instagram, { class: "edit-form-input", placeholder: "instagram" } %>
        </div>

        <div class="col ml-3">
          <%= f.label :you_tube, { class: "edit-form-label"} %><br>
          <%= f.text_field :you_tube, { class: "edit-form-input", placeholder: "you_tube" } %>
        </div>

      </div>


      <div class="row my-3">
        <%= f.input :photo, as: :file, class: "edit-form-input" %>
      </div>

      <div class="row my-3">
        <div class="col">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
      </div>

  <% end %>
</div>
